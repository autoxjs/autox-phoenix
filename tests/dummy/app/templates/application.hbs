<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2 id="title">Welcome to Ember</h2>
        {{#if session.loggedIn}}
          <small>You are logged in!</small>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <dl>
        <dt>page offset</dt>
        <dd>{{paginate.ctrl.pageOffset}}</dd>
        <dt>page limit</dt>
        <dd>{{paginate.ctrl.pageLimit}}</dd>
      </dl>
    </div>
    <div class="col-xs-4">
      <dl>
        <dt>sort field</dt>
        <dd>{{paginate.ctrl.sortField}}</dd>
        <dt>sort direction</dt>
        <dd>{{paginate.ctrl.sortDir}}</dd>
      </dl>
    </div>
    <div class="col-xs-4">
      <dl>
        <dt>filter field</dt>
        <dd>{{paginate.ctrl.filterField}}</dd>
        <dt>filter op</dt>
        <dd>{{paginate.ctrl.filterOp}}</dd>
        <dt>filter value</dt>
        <dd>{{paginate.ctrl.filterValue}}</dd>
      </dl>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h4 id="fsm-current-action">Current Action: {{fsm.currentAction.modelName}}#{{fsm.currentAction.name}}</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      {{outlet}}
    </div>
  </div>
</div>
