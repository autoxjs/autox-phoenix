<h1 class="page-title">
  Login Page
</h1>
<form {{action (route-action "login") model on="submit"}}>
  <label for="email">
    Email
    {{one-way-input
      value=model.email
      class="form-control input__email"
      update=(action (mut model.email))}}
  </label>
  <label for="password">
    Password
    {{one-way-input
      value=model.password
      type="password"
      class="form-control input__password"
      update=(action (mut model.password))}}
  </label>
  <button class="btn btn-lg btn-primary" type="submit">
    Login!
  </button>
</form>
