<h1 class="page-title">
  Login Page
</h1>
<form {{route-action "login" model}}>
  {{one-way-input
    value=model.username
    class="form-control input__username"
    update=(action (mut model.username))}}
  {{one-way-input
    value=model.password
    type="password"
    class="form-control input__password"
    update=(action (mut model.password))}}
  <button class="btn btn-lg btn-primary" type="submit">
    Login!
  </button>
</form>
